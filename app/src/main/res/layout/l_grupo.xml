<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Controlador.C_Grupo">

    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="10dp"
            android:layout_height="146dp"
            android:baselineAligned="false" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/hpe" />

        <Space
            android:layout_width="559dp"
            android:layout_height="146dp"
            android:baselineAligned="false" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/bp2" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Layout1"
            android:layout_alignLeft="@+id/Layout1"
            android:layout_span="6"
            android:gravity="center"
            android:text="MANTENIMIENTO DE GRUPOS"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp"
            android:textStyle="normal|bold"
            android:visibility="visible"
            app:fontFamily="@font/pt_sans" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilId_Grupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etId_Grupo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="* ID"
                    android:inputType="number"
                    android:singleLine="true"
                    app:fontFamily="@font/pt_sans" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilNombre_Grupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etNombre_Grupo"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:enabled="true"
                    android:gravity="center"
                    android:hint="* Nombre del grupo"
                    android:inputType="textMultiLine"
                    app:fontFamily="@font/pt_sans" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Layout1"
            android:layout_alignLeft="@+id/Layout1"
            android:layout_span="6"
            android:gravity="center"
            android:text="PERMISOS"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="32dp"
            android:textStyle="normal|bold"
            android:visibility="visible"
            app:fontFamily="@font/pt_sans" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkFilas"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Filas"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkClientes"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Clientes"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkCantidadUR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Cantidad de UR"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkTipoAlertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Tipo Alertas"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="27dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkColorAlertas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Color Alertas"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="29dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkPasillos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Pasillos"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkChillers"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Chillers"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkAreas"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Ãreas"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkGrupos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Grupos"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkAlertas"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Alertas"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkRacks"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Racks"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkEquipos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Equipos"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="25dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkVersion"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Versiones"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/chkParametros"
                android:layout_width="229dp"
                android:layout_height="wrap_content"
                android:text="Mantenimiento de Parametros"
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="bottom|center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/chkPinSeguridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold|italic"
                app:fontFamily="@font/pt_sans" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilPinSeguridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/etPinSeguridad"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="PIN"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    app:fontFamily="@font/pt_sans" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="53dp"
        app:fab_labelStyle="@style/Etiquetas"
        fab:fab_addButtonColorNormal="?attr/colorPrimary"
        fab:fab_addButtonSize="normal"
        fab:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNuevo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/nuevo"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/guardar"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabBuscar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/buscar"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabLimpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/clean"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabModificar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/modificar"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/back"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabSiguiente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/next"
            fab:fab_size="mini"
            fab:fab_title="" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabDesactivar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorAccent"
            fab:fab_icon="@drawable/desactivar"
            fab:fab_size="mini"
            fab:fab_title="" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</android.support.design.widget.CoordinatorLayout>